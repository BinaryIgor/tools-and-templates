{
  "volumes": [
    "${secrets-path}:/secrets:ro"
  ],
  "build_cmd": "bash build_cmd.bash",
  "env": {
    "JVM_OPTS": "-Xmx450m",
    "ENV": "prod",
    "DB_URL": "${db-url}",
    "DB_USER": "${db-user}",
    "DB_PASSWORD": "file:/secrets/db-password.txt",
    "JWT_TOKEN_KEY": "file:/secrets/jwt-token-key.txt"
  },
  "secrets": [
    "db-password",
    "jwt-token-key"
  ],
  "network": "host",
  "memory": "500M",
  "cpus": "0.5"
}