{
  "volumes": [
    "$PWD/conf:/etc/nginx/conf.d",
    "${certs-path}:/etc/certs"
  ],
  "build_cmd": "bash build.bash",
  "build_env": {
    "HTTP_PORT": 80,
    "HTTPS_PORT": 443,
    "DOMAIN": "${sockets-server-domain}"
  },
  "pre_run_cmd": "bash update_app_url_pre_start.bash \"${current-app-sockets-server-template-url-file-path}\"",
  "post_run_cmd": "bash check_proxied_app.bash",
  "pre_deploy_actions": [
    "chmod +x ${deploy-dir}/reload_nginx_config.sh",
    "sudo cp ${deploy-dir}/reload_nginx_config.sh /etc/letsencrypt/renewal-hooks/post/reload_nginx_config.sh"
  ],
  "network": "host",
  "memory": "500M",
  "cpus": "0.5"
}