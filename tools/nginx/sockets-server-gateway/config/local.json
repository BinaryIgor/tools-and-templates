{
  "volumes": [
    "$PWD/conf:/etc/nginx/conf.d",
    "${CERTS_VOLUME_PATH}/fullchain.pem:/etc/certs/live/${sockets-server-domain}/fullchain.pem",
    "${CERTS_VOLUME_PATH}/privkey.pem:/etc/certs/live/${sockets-server-domain}/privkey.pem"
  ],
  "build_cmd": "bash build.bash",
  "build_env": {
    "HTTP_PORT": 90,
    "HTTPS_PORT": 543,
    "DOMAIN": "${sockets-server-domain}"
  },
  "pre_run_cmd": "bash update_app_url_pre_start.bash \"${current-app-sockets-server-template-url-file-path}\"",
  "post_run_cmd": "bash check_proxied_app.bash",
  "network": "host",
  "memory": "500M",
  "cpus": "0.5"
}